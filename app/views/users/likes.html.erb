<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <% if @user.id == @current_user.id %>
      <%= link_to("ユーザー情報を編集","/users/#{@user.id}/edit") %>
      <% end %>
    </div>

      <ul class="user-tabs">
          <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
          <li class="active"><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
          <li><%= link_to("わかる!", "/users/#{@user.id}/sees") %></li>
      </ul>

    <% @like_posts.each do |post| %>

    <div class="posts-index-item">
      <div class="posts-title">
      <%= link_to(post.title,"/posts/#{post.id}") %>
      </div>

      <div class="posts-image">
        <p>
          <img src="<%= "/post_image/#{post.post_image}" %>">
        </p>
      </div>

      <div class="post-user-name">
        <img src="<%= "/user_images/#{post.user.image_name}" %>">
        <%= link_to(post.user.name, "/users/#{post.user.id}") %>
      </div>

    </div>

    <% end %>

  </div>
</div>
