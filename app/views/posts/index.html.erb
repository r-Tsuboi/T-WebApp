<div class="main posts-index">

  <div class="container">
    <% @posts.each do |post| %>

    <div class="posts-index-item">
      <div class="posts-title">
        <%= link_to(post.title,"/posts/#{post.id}") %>
      </div>

      <div class="posts-image">
        <img src="<%= "/post_image/#{post.post_image}" %>">
      </div>

      <div class="post-user-name">
      </div>

    </div>
    <% end %>
  </div>
</div>
