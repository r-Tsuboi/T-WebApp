<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <div class="form">
      <div class="form-body">
        <%= form_tag("/posts/create", {multipart: true}) do %>
        <p>タイトル</p>
        <input name="title">
        <p>画像</p>
        <input name="image" type="file">
        <p>内容</p>
        <textarea name="content"></textarea>
        <p>タグ</p>
        <input name="tag_name">
        <input type="submit" value="投稿">
        <% end %>
      </div>
    </div>
  </div>
</div>
