<div class="main posts-show">
  <div class="container">
    <div class="posts-show-title">
      <p>
        <%= @post.title %>
      </p>
    </div>
    <div class="posts-show-item">
      <p>
        <%= @post.content %>
      </p>
    </div>
    <div class="post-time">
      <p>
        <%= @post.created_at %>
      </p>
    </div>
  </div>
</div>
