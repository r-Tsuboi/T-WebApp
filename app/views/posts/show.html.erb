<div class="main posts-show">
  <div class="container posts-main">

    <div class="posts-show-title">
      <p>
        <%= @post.title %>
      </p>

    </div>

    <div class="post-user-name">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
        <%= link_to(@user.name, "/users/#{@user.id}") %>
    </div>

    <div class="posts-show-image">
      <img src="<%= "/post_image/#{@post.post_image}" %>">
    </div>

    <div class="posts-show-item">
      <p>
        <%= @post.content %>
      </p>
    </div>

    <div class="posts-show-tag">
      <p>タグ</p>
      <% @search_tags.each do |tag| %>
        <h3>
          <%= tag.tag_name %>
        </h3>
      <% end %>
    </div>

    <div class="clear-element"></div>

    <div class="posts-btn">
    <div class="like">
      <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
      <div class="like-btn-unlike">
        <%= link_to("いいね!", "/likes/#{@post.id}/destroy", {method: "post"}) %>
      </div>
      <% else %>
      <div class="like-btn-like">
        <%= link_to("「いいね」する？", "/likes/#{@post.id}/create", {method: "post"}) %>
      </div>
      <% end %>
    </div>
    <div class="see">
      <% if See.find_by(user_id: @current_user.id, post_id: @post.id) %>
      <div class="like-btn-unlike">
        <%= link_to("わかる!", "/sees/#{@post.id}/destroy", {method: "post"}) %>
      </div>
      <% else %>
      <div class="like-btn-like">
        <%= link_to("「わかる」する？", "/sees/#{@post.id}/create", {method: "post"}) %>
      </div>
      <% end %>
  </div>
  </div>

  <div class="post-time">
    <p>
      <%= @post.created_at %>
    </p>
  </div>

    <% if @post.user_id == @current_user.id %>
    <div class="post-menus">
      <%= link_to("編集","/posts/#{@post.id}/edit") %>
      <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
    </div>
    <% end %>

  </div>
</div>
